/* pages/seat/seat.wxss */
.head {
  padding: 20rpx 30rpx 0;
  border-bottom: 2rpx #c0c0c0 solid;
}

.shop {
  border-bottom: 1rpx #ddd solid;
  padding-bottom: 16rpx;
}

.shop-name {
  color: #101010;
  font-size: 34rpx;
  margin-bottom: 6rpx;
  font-weight: bold;
}

.time {
  font-size: 26rpx;
  color: #ababab;
}

.effects {
  font-size: 26rpx;
  color: #ff7f50;
  margin-left: 10rpx;
  font-weight: bold;
}

.tips {
  display: flex;
  align-items: center;
  height: 78rpx;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.tip-item {
  margin-right: 20rpx;
}

.seat {
  width: 44rpx;
  height: 38rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.room-wrap {
  height: 760rpx;
  background-color: #f0f0f0;
  position: relative;
  overflow: hidden;
}

.scene {
  margin: 0 auto;
  width: 310rpx;
  border-top: 36rpx solid #dcdcdc;
  border-right: 6rpx solid transparent;
  border-bottom: 36rpx solid transparent;
  border-left: 6rpx solid transparent;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
}

.room-name {
  margin-top: -30rpx;
  letter-spacing: 2rpx;
}

.columns {
  margin-left: 32rpx;
  width: 36rpx;
  position: absolute;
  top: 126rpx;
  background-color: #c2c2c2;
  opacity: 0.8;
  z-index: 2;
  border-radius: 12rpx;
}

.column-id {
  height: 27px;
  line-height: 27px;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  font-family: Geneva, Tahoma, sans-serif;
}

.willchange {
  will-change: transform;
}

.map {
  position: absolute;
  transform: translateZ(0);
  top: 120rpx;
}

.row {
  display: flex;
}

.seat-img {
  width: 36rpx;
  height: 32rpx;
  margin: 7rpx 4rpx;
}

.buy {
  padding: 0 30rpx;
  border-top: 2rpx #c0c0c0 solid;
}

.seats-info {
  height: 128rpx;
  border-bottom: 2rpx #e6e6e6 solid;
}

.seats-title {
  font-size: 28rpx;
  margin-top: 16rpx;
  color: #666;
  font-weight: bold;
}

.seats-wrap{
  display: flex;
}

.seat-item {
  display: flex;
  width: 154rpx;
  height: 58rpx;
  border: 2rpx #ddd solid;
  border-radius: 8rpx;
  margin-top: 14rpx;
  margin-right: 10rpx;
  padding-left: 8rpx;
  align-items: center;
}

.seat-name {
  display: inline-block;
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
  margin-right: 10rpx;
}

.seat-cancel {
  width: 14px;
  height: 1px;
  background: #ccc;
  line-height: 0;
  font-size: 0;
  vertical-align: middle;
  transform: rotate(45deg);
}

.seat-cancel:after {
  content: '/';
  display: inline-block;
  width: 14px;
  height: 1px;
  background: #ccc;
  transform: rotate(-90deg);
}

.confirm-wrap {
  display: flex;
  align-items: center;
  height: 90rpx;
}

.total {
  flex: 1;
}

.price-wrap {
  display: flex;
}

.price {
  font-size: 36rpx;
  color: #ff7f50;
  font-weight: bold;
}

.price-tail {
  font-size: 24rpx;
  color: #ff7f50;
  margin-top: 8rpx;
}

.price-eval {
  font-size: 24rpx;
  color: #999;
}

.confirm {
  width: 300rpx;
  height: 78rpx;
  background-color: #ff7f50;
  text-align: center;
  line-height: 78rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}

.warning {
  background-color: #FFD699;
}
