.theater {
  border-bottom: 1rpx #dcdcdc solid;
  padding: 30rpx 0;
}

.shop {
  display: flex;
  align-items: center;
}

.theater-name {
  font-size: 28rpx;
  font-weight: bold;
}

.price {
  color: #ff7f50;
}

.price-value {
  font-size: 26rpx;
  margin-left: 20rpx;
}

.price-tail {
  font-size: 22rpx;
}

.adress {
  font-size: 22rpx;
  margin-top: 14rpx;
  color: #797979;
}

.tips {
  display: flex;
  font-size: 22rpx;
  margin-top: 18rpx;
}

.tip {
  padding: 4rpx;
  margin-right: 6rpx;
}

.blue {
  border: 1rpx #589daf solid;
  border-radius: 8rpx;
}

.orang {
  border: 1rpx rgb(40, 201, 139) solid;
  border-radius: 8rpx;
}

.discount {
  display: flex;
  font-size: 22rpx;
  color: #a0a0a0;
  margin-top: 10rpx;
  align-items: center;
}

.hui {
  width: 28rpx;
  height: 28rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 28rpx;
  border-radius: 4rpx;
  color: #fff;
  margin-right: 10rpx;
  background-color: #f90;
}