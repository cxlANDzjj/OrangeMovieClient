.head {
  height: 84rpx;
  background-color: #ff7f50;
  display: flex;
  align-items: center;
}

.head-poi {
  font-size: 14px;
  margin:0 26rpx;
  color: white;
}

.poi {
  position: relative;
}

.poi-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: white;
  border-style: solid;
  transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
  position: absolute;
  right: -28rpx;
  margin-top: -30rpx;
}

.head-searchbox {
  height: 56rpx;
  background-color: white;
  border-radius: 20rpx;
  flex: 1;
  margin: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  color: #aaa;
}
